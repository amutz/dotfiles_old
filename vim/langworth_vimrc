" inspired by http://statico.github.io/vim.html

:nmap j gj
:nmap k gk

:set ignorecase
:set smartcase

:nmap <C-e> :e#<CR>

:nmap <C-n> :bnext<CR>
:nmap <C-p> :bprev<CR>

:let g:ctrlp_map = '<Leader>e'
:let g:ctrlp_match_window_bottom = 0
:let g:ctrlp_match_window_reversed = 0

:let g:ctrlp_show_hidden = 0
:let g:ctrlp_working_path_mode = 'ra'

